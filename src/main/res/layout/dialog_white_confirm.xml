<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="296dp"
    android:layout_height="210dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_rectangle_white_14_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        tools:text="提示.."
        android:textColor="@color/com_color_black_text"
        android:textSize="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="6dp"
        android:background="#D1D1D3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:divider="@drawable/shape_divider_vertical_small"
        android:showDividers="middle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            tools:text="取消"
            android:textColor="@color/com_color_gray_text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:gravity="center"
            tools:text="确认"
            android:textColor="@color/com_color_black_text"
            android:textSize="22sp" />

    </LinearLayout>


</LinearLayout>