<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">


    <TextView
        android:id="@+id/tv_update_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_big_black"
        android:textSize="23sp"
        android:textStyle="bold"
        android:text="@string/upload_type_two_to_one">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_upload_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="蓝牙平台"></TextView>

        <TextView
            android:id="@+id/tv_upload_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="Application"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ble_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="蓝牙平台"></TextView>

        <TextView
            android:id="@+id/tv_ble_platform_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="Nordic"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bootloader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="bootloader 文件名">

        </TextView>

        <TextView
            android:id="@+id/tv_bootloader_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="xxx">

        </TextView>

        <TextView
            android:id="@+id/tv_bootloader_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="版本号：">

        </TextView>

        <TextView
            android:id="@+id/tv_bootloader_version_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="xxx">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_firmware"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="最新固件名称：">

        </TextView>

        <TextView
            android:id="@+id/tv_firmware_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="xxx">
        </TextView>

        <TextView
            android:id="@+id/tv_firmware_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="版本号：">
        </TextView>

        <TextView
            android:id="@+id/tv_firmware_version_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_normal_black"
            android:text="xxx">
        </TextView>

    </LinearLayout>


</LinearLayout>


