<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 黑色的16sp字体-->
    <style name="text_normal_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/com_color_black_text</item>
        <item name="android:textSize">@dimen/com_text_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- 黑色的18sp字体-->
    <style name="text_big_black" parent="@style/text_normal_black">
        <item name="android:textSize">@dimen/com_text_big</item>
    </style>

    <style name="BtnSubmit" parent="@style/text_big_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/selector_submit_gray2blue_text</item>
        <item name="android:background">@drawable/selector_submit_btn</item>
    </style>

    <!-- dialog 淡入淡出动画 -->
    <style name="DialogAnimationsFade" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- -->
    <style name="AlertDialog.Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
